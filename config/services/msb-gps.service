[Unit]
Description=Motion Sensor Box Global Navigation Satellite System Service
After=network.target
StartLimitIntervalSec=0

[Service]
SyslogIdentifier=msb-gps
Type=simple
Restart=always
RestartSec=1
Environment="MSB_CONFIG_DIR=/home/base/.config"
Environment="PYTHONPATH=/home/base/motion-sensor-box/src"
User=base
ExecStart=/usr/bin/python3 /home/base/motion-sensor-box/src/msb_gps/GPSSender.py

[Install]
WantedBy=multi-user.target
