[Unit]
Description=Motion Sensor Box ZeroMQ Message Broker Service
After=network.target
StartLimitIntervalSec=0

[Service]
SyslogIdentifier=msb-broker
Type=simple
Restart=on-failure
RestartSec=1
Environment="MSB_CONFIG_DIR=/home/base/.config"
Environment="PYTHONPATH=/home/base/motion-sensor-box/src"
User=base
ExecStart=/usr/bin/python3 /home/base/motion-sensor-box/src/msb_broker/msb_broker.py

[Install]
WantedBy=multi-user.target
