[Unit]
Description=Motion Sensor Box ZeroMQ Message Broker Service
After=network.target
StartLimitIntervalSec=0

[Service]
SyslogIdentifier=msb-broker
Type=simple
Restart=always
RestartSec=1
Environment="MSB_CONFIG_DIR=/home/felix/.config"
User=felix
ExecStart=/usr/bin/python3 /home/felix/repositories/motion-sensor-box/src/msb_broker/msb_broker.py

[Install]
WantedBy=multi-user.target
