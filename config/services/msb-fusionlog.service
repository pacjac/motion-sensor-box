[Unit]
Description=Motion Sensor Box Sensor Fusion and Logging Service
After=msb-broker.service
StartLimitIntervalSec=0

[Service]
SyslogIdentifier=msb-fusionlog
Type=simple
Restart=always
RestartSec=1
Environment="MSB_CONFIG_DIR=/home/base/.config"
Environment="PYTHONPATH=/home/base/motion-sensor-box/src"
User=base
ExecStart=/usr/bin/python3 /home/base/motion-sensor-box/src/msb_fusionlog/msb_fusionlog.py

[Install]
WantedBy=multi-user.target
